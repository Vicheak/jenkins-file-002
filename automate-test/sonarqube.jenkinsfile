pipeline {
    agent any;

    tools {
        maven 'Maven'
    }

    stages {
        stage('Get Resource from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Vicheak/student-api.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Scan SonarQube') {
            steps {
                withSonarQubeEnv('sonarqube-admin') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }

    post {
        success {
            sh 'curl -s -X POST https://api.telegram.org/bot7503919178:AAFKdh3ib2Vs3tVB3uTfIDfvhe0ErbfW8sM/sendMessage 
            -d chat_id=-4541403715 -d text="Automate testing has been analyzed successfully!"'
        }

        failure {
            sh 'curl -s -X POST https://api.telegram.org/bot7503919178:AAFKdh3ib2Vs3tVB3uTfIDfvhe0ErbfW8sM/sendMessage 
            -d chat_id=-4541403715 -d text="Automate testing has been failed!"'
        }
    }
}
