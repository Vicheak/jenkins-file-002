pipeline {
    agent {
        docker {
            image 'ubuntu:22.04'
            args '-v /var/run/docker.sock:/var/run/docker.sock' 
        }
    }

    stages {
        stage('Git Resource from Git'){ 
            steps{
                git branch: 'main', url: 'https://github.com/Vicheak/reactjs-testing.git'
            }
        }

        stage('Build and Deploy'){
            steps{
                sh 'docker compose up -d --build'
            }
        }
    }
}